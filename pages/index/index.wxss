/**index.wxss**/
.search{
  position: absolute;
  top: 20rpx;
  left: 54rpx;
  width: 640rpx;
  line-height: 60rpx;
  height: 50rpx;
  padding-top: 10rpx;
  text-align: center;
  border-radius: 10rpx;
  background: #fff;
}
.search input{
  font-size: 30rpx;
}
.carousel-head{
  position: relative;
}
.carousel-box{
  height: 340rpx;
}
.carousel-img{
  width: 100%;
  height: 340rpx;
}
.nav-icon{
  padding: 10rpx;
}
.nav-icon navigator{
  display: inline-block;
  text-align: center;
  width: 182rpx;
  padding: 15rpx 0;
}
.nav-icon image{
  width: 102rpx;
  height: 102rpx;
}
.nav-icon text{
  display: block;
  font-size: 24rpx;
  margin-top: -8rpx;
}
.indTime{
  padding: 50rpx;
  justify-content: center;
}
.indTime view{
  width: 200rpx;
  text-align: center;
  border: 1rpx solid #c7c9d1;
  color: #919399;
  line-height: 60rpx;
  font-size: 26rpx;
}
.indTime .active{
  line-height: 68rpx;
  background: #2aba6e;
  color: #fff;
  border: none;
  box-shadow: 0 6rpx 15rpx rgba(0,0,0,.15);
}
.indTime view:first-child{
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}
.indTime view:nth-child(2){
  border-left: none;
  border-right: none;
}
.indTime view:last-child{
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
/* 活动轮播 */
.act navigator{
  display: inline-block;
  width: 246rpx;
  margin-right: 6rpx;
  margin-bottom: 20rpx;
}
.act .act-list navigator:nth-child(3n){
  margin-right: 0;
}
.act navigator view{
  font-size: 26rpx;
}
.act-img{
  width: 246rpx;
  height: 246rpx;
  background-size: cover;
  margin-bottom: 10rpx;
}
.act .decribe{
  margin-top: -6rpx;
  padding: 0 10rpx;
}
.act .decribe view{
  margin-bottom: 4rpx; 
}
.act .decribe text{
  color: #909399;
  line-height: 30rpx;
  font-size: 24rpx;
}
.act .decribe image{
  width: 90rpx;
  height: 30rpx;
  float: right;
}
.swiper-container .dots{ 
  display: flex;  
  justify-content: center;  
  margin: 50rpx 0;
}  
.swiper-container .dots .dot{  
  margin: 0 8rpx;  
  width: 14rpx;  
  height: 14rpx;  
  background: #55c88b;  
  border-radius: 8rpx;  
  transition: all .6s;  
}  
.swiper-container .dots .dot.active{  
  width: 34rpx;  
}  
.tit{
  line-height: 108rpx;
  font-size: 32rpx;
  justify-content: center;
}
.tit view{
  margin: 0 30rpx;
}
.tit image{
  width: 17rpx;
  height: 17rpx;
}
/* 精品推荐 */
.command .show-img{
  width: 750rpx;
  height: 274rpx;
}
.command{
  position: relative;
  overflow: hidden;
}
.command .flex{
  font-size: 26rpx;
  color: #616266;
  padding: 0rpx 20rpx 50rpx 12rpx;
}
.command .flex view{
  color: #c2c4cc;
}
.command .flex view image{
  width: 20rpx;
  height: 26rpx;
  vertical-align: middle;
}
.command .status{
  position: absolute;
  top: -40rpx;
  left: -90rpx;
  color: #fff;
  width: 200rpx;
  height: 40rpx;
  padding-top: 60rpx;
  text-align: center;
  font-size: 22rpx;
  transform: rotate(-45deg);
  background: #ff3b30;
}

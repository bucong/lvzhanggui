/* pages/addPeople/addPeople.wxss */
page{
  background: #f0eff5;
}
.top-spacing{
  height: 80rpx;
}
.info-box{
  border-top: 1rpx solid #d9d9d9;
  border-bottom: 1rpx solid #d9d9d9;
  padding-left: 30rpx;
  background: #fff;
}
.info-list{
  line-height: 80rpx;
  height: 80rpx;
  border-top: 1rpx solid #d9d9d9;
  font-size: 28rpx;
}
.info-list:first-child{
  border-top: none;
}
.info-list .name{
  width: 286rpx;
}
.info-list navigator,.info-list input{
  display: inline-block;
  margin: 0;
  height: 80rpx;
}
.info-list input{
  width: 540rpx;
}
.info-list picker{
  width: 520rpx;
  text-align: right;
  padding-right: 20rpx;
}
.info-list text{
  width: 180rpx;
}
.offen{
  width: 250rpx;
  text-align: center;
  color: #fff;
  background: #3fc17c;
}
.offen label{
  font-weight: 900;
  font-size: 32rpx;
}
.sub{
  position: fixed;
  bottom: 0;
  width: 750rpx;
  text-align: center;
  height: 96rpx;
  background: #3fc17c;
  color: #fff;
  border-radius: 0;
  border: none;
  font-size: 28rpx;
  line-height: 96rpx;
}